{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "outDir": "dist",
    "rootDir": "src",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"]
}
